/**index.wxss**/
page {
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  color: white;
}

.welcome-section {
  text-align: center;
  margin-bottom: 100rpx;
}

.game-icon {
  font-size: 120rpx;
  margin-bottom: 40rpx;
}

.welcome-title {
  font-size: 48rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
}

.welcome-desc {
  font-size: 28rpx;
  opacity: 0.8;
  margin-bottom: 20rpx;
}

.high-score {
  font-size: 24rpx;
  opacity: 0.7;
  color: #ffd700;
  font-weight: bold;
}

.menu-section {
  width: 100%;
  max-width: 500rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  background: rgba(255,255,255,0.1);
  border: 2px solid rgba(255,255,255,0.3);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  transition: all 0.3s ease;
}

.menu-item:active {
  background: rgba(255,255,255,0.2);
  transform: scale(0.98);
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 30rpx;
}

.menu-text {
  font-size: 32rpx;
  font-weight: 500;
}
