/* game.wxss */
.game-container {
  width: 100vw;
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
}


/* 游戏界面样式 */
.game-screen {
  width: 100vw;
  height: 100vh;
  position: relative;
}

.score-display {
  position: absolute;
  top: 40rpx;
  left: 40rpx;
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  z-index: 10;
  text-shadow: 2px 2px 4px rgba(0,0,0,0.5);
}

.game-canvas {
  width: 100vw;
  height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.pause-button {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  background: rgba(255,255,255,0.2);
  border: 2px solid white;
  border-radius: 20rpx;
  padding: 10rpx 20rpx;
  color: white;
  font-size: 24rpx;
  z-index: 10;
}

/* 暂停界面样式 */
.pause-screen {
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0,0,0,0.8);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: white;
  z-index: 20;
}

.pause-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.pause-score {
  font-size: 28rpx;
  margin-bottom: 60rpx;
}

.resume-button, .restart-button, .back-to-home-button {
  background: rgba(255,255,255,0.2);
  border: 2px solid white;
  border-radius: 30rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  color: white;
  margin-bottom: 20rpx;
  transition: all 0.3s ease;
}

.resume-button:active, .restart-button:active, .back-to-home-button:active {
  background: rgba(255,255,255,0.3);
  transform: scale(0.95);
}

.back-to-home-button {
  background: rgba(255,107,107,0.3);
  border-color: #ff6b6b;
}

/* 结束界面样式 */
.end-screen {
  position: absolute;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  background: rgba(0,0,0,0.9);
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: white;
  z-index: 20;
}

.end-title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 40rpx;
}

.final-score {
  font-size: 32rpx;
  margin-bottom: 20rpx;
}

.high-score-end {
  font-size: 28rpx;
  color: #ffd700;
  margin-bottom: 60rpx;
  font-weight: bold;
}

.back-button {
  background: rgba(255,255,255,0.1);
  border: 2px solid white;
  border-radius: 30rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  color: white;
  margin-top: 20rpx;
  transition: all 0.3s ease;
}

.back-button:active {
  background: rgba(255,255,255,0.2);
  transform: scale(0.95);
}
